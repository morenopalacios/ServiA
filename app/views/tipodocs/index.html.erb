<p id="notice"><%= notice %></p>

<h1>Listado Tipodocs</h1>

<table class="table table-bordered">
  <thead>
    <tr class="active">
      <th>Nombre</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @tipodocs.each do |tipodoc| %>
      <tr>
        <td><%= tipodoc.nombre %></td>
        <td><%= link_to 'Ver', tipodoc %></td>
        <td><%= link_to 'Editar', edit_tipodoc_path(tipodoc) %></td>
        <td><%= link_to 'Eliminar', tipodoc, method: :delete, data: { confirm: 'Esta seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo registro', new_tipodoc_path %>
